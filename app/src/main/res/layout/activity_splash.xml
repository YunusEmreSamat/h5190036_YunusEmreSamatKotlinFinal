<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackgroundimg"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/imgSplashLogo"
        android:layout_width="@dimen/imgSplashLogoWidth"
        android:layout_height="@dimen/imgSplashLogoHeight"
        android:layout_marginTop="@dimen/imgSplashLogoMarginTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emlakjetsplashlogo" />

    <TextView
        android:id="@+id/txtSplashSloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txtSplashSloganTextMarginTop"
        android:text="@string/txtSplashSloganText"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSplashSloganTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSplashLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>